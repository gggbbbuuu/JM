<?xml version="1.0" encoding="UTF-8"?>
<addon id="plugin.program.aauninstaller"
       name="AA Uninstaller"
       version="0.0.8"
       provider-name="GKoBu">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/> 
    </requires>
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    <extension point="kodi.context.item">
      <menu id="kodi.core.main">
        <item library="contextitem.py">
          <label>30018</label>
          <visible>Container.Content(Addons)</visible>
        </item>
      </menu>
    </extension>
    <extension point="xbmc.addon.metadata">
        <platform>all</platform>
        <summary lang="en">Advanced addon uninstaller</summary>
        <summary lang="el">Προχωρήμένη απεγκατάσταση προσθέτων</summary>
        <description lang="en">Tool to easily uninstall kodi addons and their dependencies.</description>
        <description lang="el">Εργαλείο για την ευκολότερη απεγκατάσταση των προσθέτων του kodi και των εξαρτήσεων τους.</description>
        <assets>
            <icon>resources/icon.png</icon>
        </assets>
    </extension>
</addon>